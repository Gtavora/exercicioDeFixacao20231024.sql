DELIMITER //
CREATE TRIGGER After_Insert_Clientes
AFTER INSERT ON Clientes
FOR EACH ROW
BEGIN
    INSERT INTO Auditoria (mensagem) VALUES (CONCAT('Cliente inserido em ', NWO()));
END;
//
DELIMITER ;
DELIMITER //
CREATE TRIGGER Before_Delete_Clientes
BEFORE DELETE ON Clientes
FOR EACH ROW
BEGIN
    INSERT INTO Auditoria (mensagem) VALUES (CONCAT('Cliente exclu√≠do com sucesso ', NOW()));
END;
//
DELIMITER ;
